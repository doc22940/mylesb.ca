<div class="panel panel-contact background-{{contact.background}}" id="contact">
    <div class="container">
        <div class="content">
            <article>
                <p class="type">Contact Me</p>
                
                <form action="index_submit" method="get" accept-charset="utf-8">
                    <div class="form-group">
                        <p>
                            <label for="id_name">Name</label>
                            <input type="text" id="id_name" name="name" placeholder="{{contact.placeholders.name}}">
                        </p>
                
                        <p>
                            <label for="id_email">Email</label>
                            <input type="email" id="id_email" name="email" placeholder="{{contact.placeholders.email}}">
                        </p>
                    </div>
                
                    <p>
                        <label for="id_message">Message</label>
                        <textarea type="message" id="id_message" name="message" placeholder="{{contact.placeholders.message}}"></textarea>
                    </p>
                
                    <p><input type="submit" value="Send"></p>
                </form>
            </article>
        </div>
    </div>
</div>
