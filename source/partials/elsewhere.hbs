<div class="panel panel-elsewhere background-{{elsewhere.background}}" id="elsewhere">
    <div class="container">
        <div class="content">
            <h1>Elsewhere</h1>
            
            <div class="cards">
                {{#each elsewhere.portfolio}}
                <a href="{{url}}" class="card">
                    <div class="card-image">
                        <img src="{{image}}" alt="{{name}}">
                    </div>
                    <div class="card-header">
                        {{name}}
                    </div>
                    <div class="card-copy">
                        {{#markdown }}{{copy}}{{/markdown }}
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
