---
title: Myles Braithwaite's Avatars
---

<div class="page__header">
    <div class="page__header-wrapper">
        <h1 class="page__title">Myles' Avatars</h1>
    </div>
</div>

<div class="page__content page__content--avatars">
    <div class="page__content-wrapper">
        <div class="card-list">
            {{#each avatars}}
            <div class="card">
                <div class="card__image">
                    <img src="/assets/images/avatar/{{images.headshot}}" alt="{{title}}">
                </div>

                <h2 class="card__header">{{title}}</h2>

                {{#if description}}
                <p class="card__copy">
                    {{description}}
                </p>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>
