<div class="logo">
    <div class="logo-wrapper">
        <img alt="{{ site.title }}" src="/assets/images/avatar.svg">
    </div>
</div>

<div class="header">
    <h1>{{ site.title }}</h1>
    <h2>{{ site.description }}</h2>
</div>

<div class="footer">
    <ul class="contact">
    {{#each site.contact}}
        <li class="{{ slug }}">
            <a href="{{ url }}" title="{{ trim description }}" rel="{{ rel }}">
                {{ title }}
            </a>
        </li>
    {{/each}}
    </ul>

    <ul class="elsewhere">
    {{#each site.elsewhere}}
        <li class="{{ slug }}">
            <a href="{{ url }}?utm_source=mylesb.ca&utm_medium=button&utm_campaign=referral" title="{{ trim description }}" rel="{{ rel }}">
                {{ title }}
            </a>
        </li>
    {{/each}}
    </ul>
</div>
